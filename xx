                    <span class="input-icon">üîí</span>
                </div>

                <div class="error-message" *ngIf="hasValidationError('password')" [hidden]="exceptionVisible">
                    {{getValidationErrorMessage('password')}}
                </div>

                <!-- Response Error Display -->
                <div class="error-message" *ngIf="showResponseError()">
                    {{showResponseError()}}
                </div>

                <button type="submit">
                    <span class="loading" style="display: none;"></span>
                    Access Admin Panel
                </button>
            </form>
